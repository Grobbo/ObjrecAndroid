<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/Cameraframe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/MenuLayout"
            android:layout_width="252dp"
            android:layout_height="132dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:alpha="1"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="1">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:text="Hide Menu" />

            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hue Upper bound" />

                <SeekBar
                    android:id="@+id/hh_bar"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:alpha="1"
                    android:max="255" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saturation upper bound" />

                <SeekBar
                    android:id="@+id/hs_bar"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:alpha="1"
                    android:max="255" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Value upper bound" />

                <SeekBar
                    android:id="@+id/hv_bar"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:alpha="1"
                    android:max="255" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hue lower bound" />

                <SeekBar
                    android:id="@+id/lh_bar"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:alpha="1"
                    android:max="255" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saturation lower bound" />

                <SeekBar
                    android:id="@+id/ls_bar"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:alpha="1"
                    android:max="255" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Value upper bound" />

                <SeekBar
                    android:id="@+id/lv_bar"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:alpha="1"
                    android:max="255" />

                <Button
                    android:id="@+id/rbghsv_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HSV" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
